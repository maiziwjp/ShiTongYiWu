    <title>修改昵称</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <style>
    	body{
    		background: #eeeeee; width: 100%; 
    		height: 100%;
			margin: 0;
			padding: 0;
			-webkit-tap-highlight-color: transparent;
    	}
    	#titles{ color:#000; border-bottom:1px solid #66cc66; width:90%; margin-left: 5%; margin-right: 5%; margin-top: 20px; height: 40px; font-size: 0.46rem;}
    	#titles input{ outline:none; border: none; background: #eeeeee; font-size: 16px;color:#000;}
    	#detail{width:90%; margin-left: 5%; margin-right: 5%; margin-top: 10px; height: 40px; color: #c5c5c5; font-size: 10px;}
    	#btn input { width: 90%; margin-left:5%; height: 40px; font-size:16px; color: #fff; border: 1px solid #66cc66; background: #66cc66; border-radius: 8px;}
    	img{ width: 16px; height: 16px; float: right; position:relative;top:8px;}
    </style>
</head>
<body>
	<div id="titles"><input type="text" value="" id="search_input"/><img src="../../icon/public/clearbtn.png" onclick="clearvalue()"/></div>
	<div id="detail">注意：与世通易物业务或买家品牌冲突的昵称，世通易物将有权收回</div>
	<div id="btn"><input type="button" value="保存" onclick="setNickname()" /></div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/jquery.min.js"></script>
<script type="text/javascript">
    var nickname_change,nickname;
	apiready = function(){
	getNickname();
	};
	function getNickname(){
	  $.ajax({
				type : 'get',
				url : 'http://116.62.22.98:8080/shop/Member',
				contentType : "application/json",
				headers : {
					loginToken : $api.getStorage('loginToken'),
					csrfToken : $api.getStorage('csrfToken')
				},
				success : function(data, status, xmlHttpRequest) {
					console.log(JSON.stringify(data));
					if (data.responseCode == 0) {
					    var search_input=document.getElementById("search_input");
		                search_input.value=data.data.nickname;
						$api.setStorage("csrfToken", xmlHttpRequest.getResponseHeader('csrfToken'));
						$api.setStorage("loginToken", xmlHttpRequest.getResponseHeader('loginToken'));
					} else {
					}
				},
				error : function(err) {
					//console.log(JSON.stringify(err));
				}
			});
	}
	function setNickname(){	
			var search_input = document.getElementById("search_input").value;
	        dataone={
	                nickname:search_input,
	            };
	       $.ajax({	            
				type : 'get',
				url : 'http://116.62.22.98:8080/shop/Member/setNickname',
				headers : {
					loginToken : $api.getStorage('loginToken'),
					csrfToken : $api.getStorage('csrfToken')
				},
				context : "document.body",
				data : dataone,
				success : function(data, status, xmlHttpRequest) {
				console.log(JSON.stringify(dataone));
					if (data.responseCode == 0) {
						console.log(JSON.stringify(data));
						$api.setStorage("csrfToken", xmlHttpRequest.getResponseHeader('csrfToken'));
						$api.setStorage("loginToken", xmlHttpRequest.getResponseHeader('loginToken'));	
					    console.log(JSON.stringify(xmlHttpRequest.getResponseHeader('loginToken')));
					}
				},
				error : function(err) {
					console.log(JSON.stringify(err));
				}
			});
			api.sendEvent({
    			name: 'nickname_change',
    			extra: {
       				nickname:search_input
    			} 	
			});
	}
	function clearvalue()
	{
		var search_input=document.getElementById("search_input");
		search_input.value="";

	}
</script>
</html>