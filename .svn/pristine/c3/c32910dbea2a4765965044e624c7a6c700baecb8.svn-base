<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<title>title</title>
		<style>
			body {
				background: #FFFFFF;
				width: 100%;
				height: 100%;
				margin: 0;
				font-family: "宋体";
			}
			#winpart {
				width: 100%;
				height: 45px;
				position: fixed;
				display: -webkit-box;
			}
			.img1 {
				width: 10%;
				height: 25px;
				margin-top: 10px;
				margin-left: 5%;
			}
			.img2 {
				width: 10%;
				height: 25px;
				margin-top: 10px;
				margin-right: 5%;
			}
			.middle {
				width: 70%;
				margin-top: 10px;
				text-align: center;
				position: relative;
			}
			a {
				width: 0;
				font-size: 18px;
				padding-left: 15px;
				padding-right: 15px;
				position: relative;
			}
			.back_icon {
				height: 25px;
				width: 25px;
			}
			#more {
				height: 25px;
				width: 25px;
			}
			.vline {
				width: 10px;
				height: 4px;
				background-color: #66cc66;
				position: absolute;
				bottom: -8px;
				left: 25px;
			}
			a:hover {
				color: #66cc66;
				height: 3px;
				width: 36px;
			}
			footer {
				width: 100%;
				height: 50px;
				position: fixed;
				bottom: 0;
				display: -webkit-box;
				z-index: 99999;
			}
			footer img {
				width: 20px;
				height: 20px;
			}
			.f1 {
				width: 12%;
				height: 40px;
				background: #F5F5F5;
				text-align: center;
				font-size: 10px;
				padding-top: 5px;
				padding-bottom: 5px;
				border-left: 1px solid #D2D2D2;
				border-top: 1px solid #D2D2D2;
				position: relative;
			}
			.f2 {
				width: 32%;
				height: 50px;
				text-align: center;
				padding-top: 13px;
				font-size: 18px;
				color: #FFFFFF;
			}
			#add {
				background-image: url(../../icon/add_background.jpg);
			}
			#buy {
				background: #66CC66;
			}
		</style>
	</head>
	<body>
		<header id="winpart">
			<div class="img1">
				<img class="back_icon" src="../../icon/public/back_black.png" onclick="api.closeWin();" />
			</div>
			<div class="middle">
				<!--<span tapmode="vlineafter" class="words"> 商品 </span>
				<span tapmode="vlineafter" class="words"> 详情 </span>
				<span tapmode="vlineafter" class="words"> 评价 </span>-->
				<a herf="" class="words"> 商品 </a>
				<a herf="" class="words"> 详情 </a>
				<a herf="" class="words"> 评价 </a>
			</div>
			<div class="img2">
				<img id="more" src="../../icon/public/more.png"/>
			</div>
		</header>
		<footer class="footpart">
			<div class="f1" id="service"><img src="../../icon/public/service_b.png"/>
				<br />
				<span>客服</span>
			</div>
			<div class="f1" id="store"><img src="../../icon/public/store_g.png"/>
				<br />
				<span>店铺</span>
			</div>
			<div class="f1" id="collect"><img src="../../icon/public/collect_gray.png"/>
				<br />
				<span>收藏</span>
			</div>
			<div class="f2" id="add">
				加入购物车
			</div>
			<div class="f2" id="buy">
				立即购买
			</div>
		</footer>
	</body>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/jquery.min.js"></script>
	<script type="text/javascript">
		apiready = function() {
			selected = false;
			shippingMethod_id = 2;
			store={};
			address={};
			$api.fixStatusBar($api.dom('header'));
			api.setStatusBarStyle({
				style : 'dark',
				color : '#fff'
			});
			num = 1;
			id = api.pageParam.id;
			shoppingDetails = [];
			var height = document.getElementById('winpart').offsetHeight;
			var frame_height = api.winHeight - height - $api.dom('footer').offsetHeight;
			api.openFrame({
				name : 'single_shopping_frame',
				url : './single_shopping_frame.html',
				pageParam : {
					id : id
				},
				bounces : true,
				rect : {
					x : 0,
					y : height,
					w : api.winWidth,
					h : frame_height
				},
				scrollEnabled : true,
				reload : true
			});
			api.addEventListener({
				name : 'share_shoppingDetails'
			}, function(ret, err) {
				shoppingDetails = ret.value.shoppingDetails;
			});
			
			api.addEventListener({
				name : 'return_store'
			}, function(ret, err) {
				store = ret.value.store;
				shippingMethod_id=ret.value.shippingMethod_id;
				
			});
			
			api.addEventListener({
				name : 'cancle_pickup'
			}, function(ret, err) {
			 shippingMethod_id = 2;
			
				
			});
			
			api.addEventListener({
				name : 'choose_shippingMethod'
			}, function(ret, err) {
				shippingMethod_id = ret.value.shippingMethod_id;
				
			});
			
			
			api.addEventListener({
				name : 'order_params'
			}, function(ret, err) {
				address = ret.value.address;
			shippingMethod_id = ret.value.shippingMethod_id;
				
			});
			
			api.addEventListener({
				name : 'set_address_info'
			}, function(ret, err) {
			address=ret.value.address;
			
			});
			
			
			api.addEventListener({
				name : 'add_baskets'
			}, function(ret, err) {
			num=ret.value.num;
			selected=ret.value.selected;
			selected_shopping=ret.value.selected_shopping;
			});
		};
		document.getElementById('buy').onclick = function() {
		if(!$api.getStorage('csrfToken')){
		api.toast({
								msg : '要先登录哦',
								location:'middle'
							});
							api.openWin({
				name : 'login_win',
				url : '../login_win.html',
				reload : true,
			});
		
		}
		else{
			if (selected) {
				
					api.openWin({
						name : 'submit_order_win',
						url : './submit_order_win.html',
						reload : true,
						pageParam : {
							selected_shopping : selected_shopping,
							num : num,
							shippingMethod_id:shippingMethod_id,
							store:store,
							address:address
							
						}
					});
			} else {
				api.openFrame({
					name : 'buy_frame',
					url : './buy_frame.html',
					rect : {
						x : 0,
						y : 0,
						h : "auto"
					},
					pageParam : {
						    shoppingId : id,
							shippingMethod_id:shippingMethod_id,
							store:store,
							address:address
					},
					bounces : false,
					reload : true,
					hScrollBarEnabled : false,
					vScrollBarEnabled : false,
					scrollToTop : false,
					animation : {
						type : "push",
						subType : "from_bottom",
						duration : 300
					},
				});
			}
			}
		}
		document.getElementById('add').onclick = function() {
		if(!$api.getStorage('csrfToken')){
		api.toast({
								msg : '要先登录哦',
								location:'middle'
							});
							api.openWin({
				name : 'login_win',
				url : '../login_win.html',
				reload : true,
			});
		
		}
		else{
			if (selected) {
					dataone = {
						quantity : num,
						product : selected_shopping.id
					};
					console.log(JSON.stringify(dataone));
					addToCart(dataone);
					
				

			} else {
				api.openFrame({
					name : 'choose_param_frame',
					url : './choose_param_frame.html',
					rect : {
						x : 0,
						y : 0,
						h : "auto"

					},
					reload : false,
					pageParam : {
						shoppingId : id,
							shippingMethod_id:shippingMethod_id,
							store:store,
							address:address
					},
					bounces : false,
					hScrollBarEnabled : false,
					vScrollBarEnabled : false,
					scrollToTop : false,
					animation : {
						type : "push",
						subType : "from_bottom",
						duration : 300
					},
				});

			}
			}
		};
		function addToCart(dataone) {
		if(!$api.getStorage('csrfToken')){
		api.toast({
								msg : '要先登录哦',
								location:'middle'
							});
							api.openWin({
				name : 'login_win',
				url : '../login_win.html',
				reload : true,
			});
		
		}
		else{
				$.ajax({
					type : 'post',
					url : 'http://116.62.22.98:8080/shop/cart/addToCart',
					contentType : "application/json",
					headers : {
						loginToken : $api.getStorage('loginToken'),
						csrfToken : $api.getStorage('csrfToken')
					},
					data : JSON.stringify(dataone),
					success : function(data, status, xmlHttpRequest) {
						if (data.responseCode == 0) {

						api.toast({
							msg : '购物车添加成功啦，快去付款吧！',
							location : 'middle'
						});
						 api.execScript({
		   name:'root',
		   frameName:'frame3',
	        script: ' getgoods()'
        });
					}
					else {
						api.toast({
							msg : data.responseMsg,
							location : 'middle'
						});
					}
				},
				error : function(err) {
					console.log(JSON.stringify(err));
				}
			});
			
			}
			
			
		}

		document.getElementById('store').onclick = function() {
			api.openWin({
				name : 'store_win',
				url : '../store_win.html',
				reload : true,
			});
		};
		/*var positionl=document.getElementsByClassName('words');
		 for(var i=0;i<positionl.length;i++){
		 document.addEventListener('touchstart',function(){});
		 }*/
	</script>
</html>