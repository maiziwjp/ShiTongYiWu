<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
		<meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
		<title>title</title>
		<link rel="stylesheet" type="text/css" href="../../css/api.css"/>
		<link rel="stylesheet" href="../../css/winpart.css">
		<style>
			body {
				background: #FFFFFF;
				margin: 0;
			}
			footer {
			width:100%;height:50px;background:#FFFFFF;
				position: fixed;
				bottom: 0;
				display: -webkit-box;
				border-top:1px solid #d4d4d4;
			}
			.amount {
				width: 68%;
				padding-right:2%;
				text-align: right;
				margin-top:14px;
			}
			.amount img {
				width: 15px;
				height: 15px;
				position: relative;
				top: 2px;
			}
			#rmb {
				color: #f72933;
			}
			.coin {
				color: #e59e1e;
			}
			.submit_order {
				width: 30%;
				background: #66CC66;
				color: #FFFFFF;
				font-size: 17px;
				text-align: center;
			}
			.submit_order span{margin-top:13px;}
		</style>
	</head>
	<body>
		<div class="body" >
			<header id="winpart">
				<div id="img1"><img class="back_icon" src="../../icon/public/back_black.png" onclick="closetowin();" />
				</div>
				<div id="title1">
					订单详情
				</div>
			</header>
		</div>
			
	</body>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript">
		apiready = function() {
			$api.fixStatusBar($api.dom('header'));
			/* 状态栏适配 */
			var header = document.getElementById("header");
			var height = document.getElementById("winpart").offsetHeight;
			api.setStatusBarStyle({
				style : 'dark',
				color : '#fff'
			});
			
			order_info=api.pageParam;
			api.openFrame({
				name : 'order_detail_frame.html',
				url : './order_detail_frame.html',
				rect : {
					x : 0,
					y : height,
					w:api.winWidth,
				},
				pageParam:{order_info:order_info},
				vScrollBarEnabled : false
			});
		};
		function closetowin(){
		api.closeToWin({
    name: 'single_shopping_win'
});
		}
	</script>
</html>